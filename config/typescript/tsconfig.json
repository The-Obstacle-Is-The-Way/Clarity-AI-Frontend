{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "types": ["node", "vite/client", "vitest/globals"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@domain/*": ["src/domain/*"],
      "@application/*": ["src/application/*"],
      "@infrastructure/*": ["src/infrastructure/*"],
      "@presentation/*": ["src/presentation/*"],
      "@atoms/*": ["src/presentation/atoms/*"],
      "@molecules/*": ["src/presentation/molecules/*"],
      "@organisms/*": ["src/presentation/organisms/*"],
      "@templates/*": ["src/presentation/templates/*"],
      "@pages/*": ["src/presentation/pages/*"],
      "@hooks/*": ["src/application/hooks/*"],
      "@context/*": ["src/application/context/*"],
      "@api/*": ["src/infrastructure/api/*"],
      "@utils/*": ["src/application/utils/*"],
      "@presentation/utils/*": ["src/presentation/utils/*"],
      "@graphics/*": ["src/infrastructure/graphics/*"],
      "@testing/*": ["src/infrastructure/testing/*"],
      "@types/*": ["src/domain/types/*"],
      "@models/*": ["src/domain/models/*"],
      "@constants/*": ["src/domain/constants/*"],
      "@validation/*": ["src/domain/validation/*"],
      "@assets/*": ["src/presentation/assets/*"],
      "@config/*": ["config/*"]
    }
  },
  "include": [
    "src",
    "src/infrastructure/testing",
    "test-puppeteer",
    "config",
    "*.ts",
    "*.tsx",
    "*.cjs",
    "*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    ".vite"
  ]
} 