{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "types": ["node", "vite/client", "vitest/globals"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@domain/*": ["src/domain/*"],
      "@application/*": ["src/application/*"],
      "@infrastructure/*": ["src/infrastructure/*"],
      "@presentation/*": ["src/presentation/*"],
      /* Presentation layer shortcuts */
      "@presentation/atoms/*": ["src/presentation/atoms/*"],
      "@presentation/molecules/*": ["src/presentation/molecules/*"],
      "@presentation/organisms/*": ["src/presentation/organisms/*"],
      "@presentation/templates/*": ["src/presentation/templates/*"],
      "@presentation/pages/*": ["src/presentation/pages/*"],
      "@presentation/routes/*": ["src/presentation/routes/*"],
      "@presentation/providers/*": ["src/presentation/providers/*"],
      "@presentation/styles/*": ["src/presentation/styles/*"],
      "@presentation/assets/*": ["src/presentation/assets/*"],
      "@presentation/utils/*": ["src/presentation/utils/*"],
      /* Application layer shortcuts */
      "@application/hooks/*": ["src/application/hooks/*"],
      "@application/context/*": ["src/application/context/*"],
      "@application/providers/*": ["src/application/providers/*"],
      "@application/utils/*": ["src/application/utils/*"],
      "@application/services/*": ["src/application/services/*"],
      /* Infrastructure layer shortcuts */
      "@infrastructure/api/*": ["src/infrastructure/api/*"],
      "@infrastructure/graphics/*": ["src/infrastructure/graphics/*"],
      "@infrastructure/testing/*": ["src/infrastructure/testing/*"],
      "@infrastructure/storage/*": ["src/infrastructure/storage/*"],
      /* Domain layer shortcuts */
      "@domain/types/*": ["src/domain/types/*"],
      "@domain/models/*": ["src/domain/models/*"],
      "@domain/constants/*": ["src/domain/constants/*"],
      "@domain/validation/*": ["src/domain/validation/*"],
      /* Legacy aliases for compatibility */
      "@api/*": ["src/infrastructure/api/*"],
      "@hooks/*": ["src/application/hooks/*"],
      "@context/*": ["src/application/context/*"],
      "@utils/*": ["src/application/utils/*"],
      "@types/*": ["src/domain/types/*"],
      "@models/*": ["src/domain/models/*"],
      "@constants/*": ["src/domain/constants/*"],
      "@graphics/*": ["src/infrastructure/graphics/*"],
      "@testing/*": ["src/infrastructure/testing/*"],
      "@config/*": ["config/*"]
    }
  },
  "include": [
    "src",
    "src/infrastructure/testing",
    "test-puppeteer",
    "config",
    "*.ts",
    "*.tsx",
    "*.cjs",
    "*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    ".vite",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "src/test",
    "src/mocks",
    "src/**/mocks",
    "src/setupTests.ts",
    "src/infrastructure/testing"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
} 